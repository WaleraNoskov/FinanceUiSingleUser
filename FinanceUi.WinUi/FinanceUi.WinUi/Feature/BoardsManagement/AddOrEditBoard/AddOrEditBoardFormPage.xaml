<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="FinanceUi.WinUi.Feature.BoardsManagement.AddOrEditBoardForm.AddOrEditBoardDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FinanceUi.WinUi.Feature.BoardsManagement.AddOrEditBoardForm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:AddOrEditBoardFormViewModel}"
    CloseButtonText="Отмена"
    DataContextChanged="Page_DataContextChanged"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="{Binding IsValid}"
    PrimaryButtonCommand="{Binding SaveCommand}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <TextBox
            Header="Название"
            PlaceholderText="Введите название"
            Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</ContentDialog>
