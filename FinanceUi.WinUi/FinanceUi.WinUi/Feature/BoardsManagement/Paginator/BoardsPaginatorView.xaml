<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="FinanceUi.WinUi.Feature.BoardsManagement.Paginator.BoardsPaginatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FinanceUi.WinUi.Feature.BoardsManagement.Paginator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:BoardsPaginatorViewModel}"
    DataContextChanged="UserControl_DataContextChanged"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="12">
        <Button Command="{Binding MoveBackCommand}">
            <FontIcon Glyph="&#xE76B;" />
        </Button>

        <TextBlock VerticalAlignment="Center">
            <Run Text="{Binding CurrentPage}"/>
            <Run Text="из"/>
            <Run Text="{Binding TotalPagesCount}"/>
        </TextBlock>

        <Button Command="{Binding MoveNextCommand}">
            <FontIcon Glyph="&#xE76C;" />
        </Button>
    </StackPanel>


</UserControl>
