<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FinanceUi.WinUi.Feature.BoardsManagement.BoardsManagementPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:boardslist="using:FinanceUi.WinUi.Feature.BoardsManagement.BoardsList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FinanceUi.WinUi.Feature.BoardsManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:paginator="using:FinanceUi.WinUi.Feature.BoardsManagement.Paginator"
    xmlns:searchcontrol="using:FinanceUi.WinUi.Feature.BoardsManagement.SearchControl"
    d:DataContext="{d:DesignInstance local:BoardsManagementPageViewModel}"
    DataContextChanged="Page_DataContextChanged"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="16,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <searchcontrol:BoardsSearchControl VerticalAlignment="Center" DataContext="{Binding BoardsSearchViewModel}" />

            <CommandBar
                Grid.Column="1"
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                IsOpen="False">
                <AppBarButton
                    x:Name="AddBoardButton"
                    VerticalAlignment="Center"
                    Click="AddBoardButton_Click"
                    Icon="Add"
                    Label="Добавить" />
            </CommandBar>
        </Grid>

        <boardslist:BoardsListControl Grid.Row="1" DataContext="{Binding BoardsListViewModel}" />

        <paginator:BoardsPaginatorView
            Grid.Row="3"
            Margin="0,16,0,16"
            HorizontalAlignment="Center"
            DataContext="{Binding BoardsPaginatorViewModel}" />
    </Grid>
</Page>
