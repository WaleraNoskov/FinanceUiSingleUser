<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="FinanceUi.WinUi.Feature.BoardsManagement.SearchControl.BoardsSearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FinanceUi.WinUi.Feature.BoardsManagement.SearchControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:BoardsSearchViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            Height="1"
            PlaceholderText="Ищите по названию доски"
            Text="{Binding GetAllBoardsDto.Filter}" 
            Grid.Column="0"/>

        <Button
            Command="{Binding SearchCommand}"
            Style="{StaticResource AccentButtonStyle}"
            Margin="4 0 0 0"
            Grid.Column="1">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <TextBlock Text="Искать" />
                <SymbolIcon Symbol="Find"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
