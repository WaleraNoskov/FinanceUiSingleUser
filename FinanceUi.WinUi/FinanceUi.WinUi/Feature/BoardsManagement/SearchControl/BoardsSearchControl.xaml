<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="FinanceUi.WinUi.Feature.BoardsManagement.SearchControl.BoardsSearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FinanceUi.WinUi.Feature.BoardsManagement.SearchControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:BoardsSearchViewModel}"
    mc:Ignorable="d"
    DataContextChanged="UserControl_DataContextChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <AutoSuggestBox 
            Text="{Binding GetAllBoardsDto.Filter}"
            PlaceholderText="Найти по имени"
            TextChanged="AutoSuggestBox_TextChanged"
            QueryIcon="Find"
            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
            SuggestionChosen="AutoSuggestBox_SuggestionChosen"/>

        
    </Grid>
</UserControl>
