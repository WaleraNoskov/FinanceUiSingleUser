<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="FinanceUi.WinUi.Feature.BoardsManagement.DeleteBoardDialog.DeleteBoardDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FinanceUi.WinUi.Feature.BoardsManagement.DeleteBoardDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Удаление доски"
    d:DataContext="{d:DesignInstance local:DeleteBoardDialogViewModel}"
    CloseButtonText="Отмена"
    DataContextChanged="ContentDialog_DataContextChanged"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="{Binding IsValid}"
    PrimaryButtonCommand="{Binding DeleteCommand}"
    PrimaryButtonText="Удалить"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <TextBlock>
            <Run Text="Введите " />
            <Run FontWeight="Bold" Text="{Binding BoardDto.Title}" />
            <Run Text=" для удаления" />
        </TextBlock>

        <TextBox
            PlaceholderText="Enter to confirm deletion"
            Text="{Binding NameToConfirm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</ContentDialog>
